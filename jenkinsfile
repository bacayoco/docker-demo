pipeline {
    agent any
    
   environment {
        DOCKERCREDENTIAL = credentials('admin')
    }

   
    stages {
       stage ('Clone') {
          steps {
                checkout scm
            }
        }
        
         stage('docker build and tag') {
            steps {
                sh 'docker build -t html-server-image:v1 .'
            }
        }     
        
        stage('docker login') {
            steps {
                sh 'echo ${DOCKERCREDENTIAL}| docker login -u bacayoco  --password-stdin'
            }
        } 
        
        
                 stage('docker push') {
            steps {
                sh 'docker push html-server-image:v1'
            }
        } 
        
    }
    post {
        always {
            junit 'target/surefire-reports/TEST-*.xml'
            deleteDir()
        }
    }
}
