pipeline {
    agent any
    
   environment {
        DOCKERHUB_CREDENTIALS=credentials('admin')
    }

   
    stages {
       stage ('Clone') {
          steps {
                checkout scm
            }
        }
        
         stage('docker build and tag') {
            steps {
                sh 'docker build -t bacayoco/html-server-image:v1 .'
            }
        }     
        
        stage('docker login') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        } 
        
        
                 stage('docker push') {
            steps {
                sh 'docker push bacayoco/html-server-image:v1'
            }
        } 
        
    }
    post {
        always {
            junit 'target/surefire-reports/TEST-*.xml'
            deleteDir()
        }
    }
}
