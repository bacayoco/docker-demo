pipeline {
    agent any
   
    stages {
       stage ('Clone') {
          steps {
                checkout scm
            }
        }
        
         stage('docker build and tag') {
            steps {
                sh 'docker build -t html-server-image:v1 .'
            }
        }  
         stage('docker push') {
            steps {
                sh 'docker push ${ECRREGISTRY}/${IMAGENAME}:${IMAGE_TAG}'
            }
        }                
        
    }
    post {
        always {
            junit 'target/surefire-reports/TEST-*.xml'
            deleteDir()
        }
    }
}
